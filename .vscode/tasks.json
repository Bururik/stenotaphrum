{       "version":"2.0.0",
        "command": "g++",
        "args": [
            "-Wall",
            "-o main.out",
            "main.cpp",
            "display.cpp",
            "-std=c++17",
            "-lSDL2",
            "-lGLU",
            "-lGL",
            "-lglut",
            "-lGLEW",
            "&&",
            "./main.out"
          ],
        "isShellCommand": true,
        "showOutput": "always",
        "problemMatcher": {
            "owner": "cpp",
            "fileLocation": [
                "relative",
                "${workspaceRoot}"
            ],
            "pattern": {
                "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "severity": 4,
                "message": 5
            }
  }
}
